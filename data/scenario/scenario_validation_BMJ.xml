<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<scenario date="2016-07-01"
    description="Scenario to test some individual values of BMJ">

    <task service="ObservableService" method="computeObservable" storeInDB="0">
        <kinematics type="ObservableKinematic">
            <param name="xB" value="0.3" />
            <param name="t" value="-0.1" />
            <param name="Q2" value="4" />
            <param name="phi" value="7.5" />
        </kinematics>

        <computation_configuration>
<!--             <module type="GPDModule"> -->
<!--                 <param name="className" value="GK11Model" /> -->
<!--             </module> -->

            <module type="DVCSConvolCoeffFunctionModule">
                <param name="className" value="DVCSConstantCFFModel" />
                <param name="cff_values" value="1." />
            </module>

            <module type="DVCSModule">
                <param name="className" value="BMJ2012Model" />
                <param name="beam_energy" value="4" />
            </module>

            <module type="Observable">
<!--                 <param name="className" value="Alu" /> -->
                <param name="className" value="CrossSectionObservable" />
                <param name="beam_helicity" value="1" />
                <param name="beam_charge" value="1" />
                <param name="target_polarization" value="0.|0.|0." />
            </module>

            <module type="ScaleModule">
                <param name="className" value="Q2Multiplier" />
                <param name="lambda" value="1" />
            </module>

            <module type="XiConverterModule">
                <param name="className" value="XBToXi" />
            </module>
        </computation_configuration>
    </task>
    
    <task service="ObservableService" method="printResults" storeInDB="0">
    </task>
</scenario>
