<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<scenario date="2016-03-25"
    description="Ceci est un scenario de test qui a pour but d'utiliser le service GPD">

    <task service="GPDService" method="computeGPDModel">
        <kinematics type="GPDKinematic">
            <param name="x" value="0.1" />
            <param name="xi" value="0.00050025" />
            <param name="t" value="-0.3" />
            <param name="MuF2" value="8" />
            <param name="MuR2" value="8" />
        </kinematics>

        <computation_configuration>
            <module type="GPDModule" id="GK11Model" />
        </computation_configuration>
    </task>

    <task service="GPDService" method="computeListOfGPDModel">
        <kinematics type="GPDKinematic">
            <param name="x" value="0.1" />
            <param name="xi" value="0.00050025" />
            <param name="t" value="-0.3" />
            <param name="MuF2" value="8" />
            <param name="MuR2" value="8" />
        </kinematics>

        <computation_configuration>
            <module type="GPDModule" id="GK11Model" />
            
            <module type="GPDModule" id="MPSSW13Model" />
        </computation_configuration>
    </task>

    <task service="GPDService" method="computeGPDModelWithEvolution">
        <kinematics type="GPDKinematic">
            <param name="x" value="0.1" />
            <param name="xi" value="0.00050025" />
            <param name="t" value="-0.3" />
            <param name="MuF2" value="8" />
            <param name="MuR2" value="8" />
        </kinematics>

        <computation_configuration>
            <module type="GPDModule" id="GK11Model" />

            <module type="GPDEvolutionModule" id="ExampleEvolQCDModel">
                <param name="qcd_order_type" value="LO" />
            </module>
        </computation_configuration>
    </task>

</scenario>
