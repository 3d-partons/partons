<?xml version="1.0" encoding="UTF-8"?>

<project name="PARTONS">

	<target name="clean">
		<delete dir="build" />
		<delete file="Makefile" />
	</target>

	<target name="QtSourceFileGenerator">
		<java jar="/usr/local/QtSourceFileGenerator/QtSourceFileGenerator.jar" fork="true">
			<arg value="${basedir}" />
		</java>
	</target>

	<target name="qmake" depends="QtSourceFileGenerator">
		<exec executable="qmake" failonerror="true" dir="${basedir}">
		</exec>
	</target>

	<target name="build" depends="qmake">
		<exec executable="make" failonerror="true" dir="${basedir}">
		</exec>
	</target>

</project>